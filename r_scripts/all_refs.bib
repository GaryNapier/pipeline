issn = {1932-6203},
journal = {PLOS ONE},
keywords = {Antibiotic resistance,Extensively drug-resistant tuberculosis,Mutant strains,Mutation,Mycobacterium tuberculosis,Point mutation,Single nucleotide polymorphisms,Streptomycin},
month = {feb},
